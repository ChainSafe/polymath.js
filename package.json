{
  "name": "polymath",
  "version": "0.1.0",
  "private": true,
  "description": "Tools for interacting with the Polymath platform",
  "main": "dist/bundle.js",
  "scripts": {
    "build": "webpack",
    "compile": "truffle compile",
    "lint": "eslint --fix src",
    "migrate-ropsten": "truffle migrate --network=ropsten",
    "precommit": "lint-staged",
    "test": "ganache-cli & truffle test",
    "watch-build": "webpack --watch",
    "watch-lint": "esw -w --fix src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PolymathNetwork/polymath.js.git"
  },
  "keywords": [
    "polymath"
  ],
  "author": "Polymath",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PolymathNetwork/polymath.js/issues"
  },
  "homepage": "https://github.com/PolymathNetwork/polymath.js#readme",
  "dependencies": {
    "truffle-contract": "3.0.1"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.1",
    "eslint": "4.11.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.8.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-prettier": "2.4.0",
    "eslint-watch": "3.1.3",
    "ganache-cli": "6.0.3",
    "husky": "0.14.3",
    "lint-staged": "5.0.0",
    "prettier": "1.8.2",
    "webpack": "3.10.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
